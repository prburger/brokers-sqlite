{% extends 'base.html.twig' %}

{% block title %}{{'customer_index'|trans|raw}}{% endblock %}

{% block body %}
    <div class="page_form_heading">{{'customer_index'|trans|raw}}
<div class="return_to_list_label">
<a href="{{ path('customer_new') }}" title="{{'create_new_customer'|trans|raw}}"><i class="fas fa-plus page_icon"></i></i></a>
        <a href="{{ path('portal_index') }}" title="{{'back_to_portal'|trans|raw}}"><i class="fas fa-undo page_icon"></i></a>
    </div>
    </div>
    
    <div class="index_table">
    <table class="table">
        <thead>
            <tr>
                <th>{{'table.column.name'|trans|raw}}</th>
                <th>{{'table.column.date.added'|trans|raw}}</th>
                <th>{{'table.column.date.edited'|trans|raw}}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.name }}</td>
                <td>{{ customer.dateAdded ? customer.dateAdded|date('Y-m-d') : '' }}</td>
                <td>{{ customer.dateEdited ? customer.dateEdited|date('Y-m-d') : '' }}</td>
                <td class="action_column">
                  <a href="{{ path('customer_show', {'id': customer.id }) }}" title="{{'action_show'|trans|raw}}"><i class="fas fa-glasses action_icon"></i></a>
                  <a href="{{ path('customer_edit', {'id': customer.id }) }}" title="{{'action_edit'|trans|raw}}"><i class="far fa-edit action_icon"></i></a>
                </td>
            </tr>
        {% else %}
        {%include 'no_records_found.php' %}
           
        {% endfor %}
        </tbody>
    </table>
</div> 
{% endblock %}
