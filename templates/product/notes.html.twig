<div class="row">
    <div class="col-sm-6">
        <div class="form_component_title">{{'form_component_notes_title'|trans|raw}}</div>
    </div> 
    <div class="col-sm-6">
    {% if edit_state or fresh_state %}
        <a class="form_component_link" 
        href="{{ path('note_new') }}" 
        title="{{'form_component_newNote'|trans|raw}}">
        <i class="fas fa-plus page_icon"></i>
        </a>
    {% endif %}
    </div>
</div> 

<div class="col form_component">        
    <div class="row">
        <div class="col-sm-12">
        {% if product.notes %}        
        {# <div class="form_component_container"> #}
            <table class="form_component_table">
                <tbody>
                    {% for note in product.notes %}
                        <tr>
                            <td>{{note.text}}</td>
                            <td class="action_column">
                            {% if edit_state or fresh_state %}
                                <a class="form_component_link" 
                                href="{{ path('note_edit',{'id': note.id}) }}" 
                                title="{{'action.edit'|trans|raw}}">
                                <i class="fas fa-edit page_icon"></i>
                                </a>                         
                            {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {# </div> #}
        {% else %}
            <div class="form_component_no_records">{{'form_component_no_records'|trans|raw}}</div>
        {% endif %}
        </div>
    </div>
</div> 
