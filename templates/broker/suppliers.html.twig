<div class="row">
        <div class="col form_component">        
            <div class="row">
                <div class="col-sm-6">
                    <div class="form_component_title">{{'form_component_suppliers_title'|trans|raw}}</div>
                </div>
                <div class="col-sm-6">
                {% if edit_state %}
                    <a class="form_component_link" 
                    href="{{ path('broker_addSupplier',{'broker': broker.id}) }}" 
                    title="{{'form_component_newSupplier'|trans|raw}}">
                    <i class="fas fa-plus page_icon"></i>
                    </a>
                     <a class="form_component_link" 
                    href="{{ path('broker_insertSuppliers',{'broker': broker.id}) }}" 
                    title="{{'form_component_insertSupplier'|trans|raw}}">
                    <i class="fas fa-list-ul page_icon"></i>
                    </a>
                {% endif %}
                </div>
            </div>

            {% if broker.suppliers %}        
            <div class="form_component_container">
                <table class="form_component_table">
                    <tbody>
                        {% for supplier in broker.suppliers %}
                            <tr>
                                <td>{{supplier.name}}</td>
                                <td class="action_column">
                                {% if edit_state %}
                                    <a class="form_component_link" 
                                    href="{{ path('supplier_edit',{'id': supplier.id}) }}" 
                                    title="{{'action.edit'|trans|raw}}">
                                    <i class="fas fa-edit page_icon"></i>
                                    </a>  

                                     <a class="form_component_link" 
                                    href="{{ path('broker_removeSupplier',{'supplier': supplier.id, 'broker':broker.id}) }}" 
                                    title="{{'action.remove'|trans|raw}}">
                                    <i class="fas fa-minus-circle"></i></a>
                                    </a>   
                                    {% endif %}                                 
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
                <div class="form_component_no_records">{{'form_component_no_records'|trans|raw}}</div>
            {% endif %}
    </div>
</div>    