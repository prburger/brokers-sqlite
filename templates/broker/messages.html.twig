    
    <div class="row">
        <div class="col form_component">        
            <div class="row">
                <div class="col-sm-6">
                    <div class="form_component_title">{{'form_component_messages_title'|trans|raw}}</div>
                </div>
                <div class="col-sm-6">
                {% if edit_state %}
                    <a class="form_component_link" href="{{ path('message_new',{'broker_id': broker.id}) }}" 
                    title="{{'form_component_newMessage'|trans|raw}}">
                    <i class="fas fa-plus page_icon"></i>
                    </a>
                {% endif %}
                </div>
            </div>

            {% if broker.messages %}        
            <div class="form_component_container">
                <table class="form_component_table">
                    <tbody>
                        {% for message in broker.messages %}
                            <tr>
                                <td>{{message.text}}</td>
                                <td class="action_column">
                                {% if edit_state %}
                                    <a class="form_component_link" href="{{ path('message_edit',{'id': message.id}) }}" 
                                    title="{{'action.edit'|trans|raw}}">
                                    <i class="fas fa-edit page_icon"></i>
                                    </a>    
                                     <a class="form_component_link" 
                                    href="{{ path('message_removeBroker',{'message': message.id, 'broker':broker.id}) }}" 
                                    title="{{'action.remove'|trans|raw}}">
                                    <i class="fas fa-minus-circle"></i></a>
                                    </a> 
                                    {% endif %}                                 
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
                <div class="form_component_no_records">{{'form_component_no_records'|trans|raw}}</div>
            {% endif %}
    </div>
</div>