{% extends 'base.html.twig' %}

{% block title %}{{'broker_index'|trans|raw}}{% endblock %}

{% block body %}
    
    <div class="page_form_heading">{{'broker_index'|trans|raw}}
    <div class="return_to_list_label">
        <a href="{{ path('broker_new') }}" title="{{'create_new_broker'|trans|raw}}"><i class="fas fa-plus page_icon"></i></i></a>
        <a href="{{ path('portal_index') }}" title="{{'back_to_portal'|trans|raw}}"><i class="fas fa-undo page_icon"></i></a>    
    </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>{{'table.column.name'|trans|raw}}</th>
                <th>{{'table.column.date.added'|trans|raw}}</th>
                <th>{{'table.column.date.edited'|trans|raw}}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for broker in brokers %}
            <tr>
                <td>{{ broker.name }}</td>
                <td>{{ broker.dateAdded ? broker.dateAdded|date('Y-m-d') : '' }}</td>
                <td>{{ broker.dateEdited ? broker.dateEdited|date('Y-m-d') : '' }}</td>
                <td class="action_column">
                    <a href="{{ path('broker_show', {'id': broker.id }) }}" title="{{'action_show'|trans|raw}}"><i class="fas fa-glasses action_icon"></i></a>
                    <a href="{{ path('broker_edit', {'id': broker.id }) }}" title="{{'action_show'|trans|raw}}"><i class="far fa-edit action_icon"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td  colspan="4">
                    <p class="no_records_found">{{'table.no_records_found'|trans|raw}}</p>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>    

{% endblock %}
