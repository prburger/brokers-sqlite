{% block body %}
<div class="row">
        <div class="col">
            <div class="dashboard_title">
                {{'dashboard.title.customers'|trans|raw}}  
            <a class="return_to_list_label" href="{{ path('customer_index') }}" title="Details"><i class="fas fa-file-alt page_icon"></i></a>
            </div>
        </div>
    </div>
    <table class="dashboard_table">
        <thead>
            <tr>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.name }}</td>
                <td class="return_to_list_label">
                    <a href="{{ path('customer_show', {'id': customer.id}) }}" title="Show"><i class="far fa-eye dashboard_icon"></i></a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}" title="Edit"><i class="fa fa-edit dashboard_icon"></i></a>
                </td>
            </tr>
        {% else %}
        {% include 'no_dashboard_records_found.php' %}
{#             <tr>
                <td class="no_records_found" colspan="2">{{'table.no_records_found'|trans|raw}}</td>
            </tr>
 #}        {% endfor %}
        </tbody>
    </table> 

{% endblock %}